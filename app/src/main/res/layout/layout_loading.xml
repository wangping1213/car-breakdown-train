<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dimen_150_dip"
        android:layout_height="@dimen/dimen_110_dip"
        android:background="@drawable/shape_loading_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingLeft="@dimen/dimen_21_dip"
        android:paddingRight="@dimen/dimen_21_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="@dimen/dimen_35_dip"
            android:layout_height="@dimen/dimen_35_dip"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/dialog_loading"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/tipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:text="加载中..."
            android:textColor="#f0f0f0"
            android:textSize="@dimen/dimen_15_sp" />
    </LinearLayout>

</LinearLayout>